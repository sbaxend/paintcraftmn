---
export interface Props {
  image?: string;
  alt?: string;
  eyebrow?: string;
  title?: string;
  subtitle?: string;
  ctaLabel?: string;
  ctaHref?: string;
}

const {
  image = "/footerbanner.png",
  alt = "Beautifully lit home interior with fresh paint",
  eyebrow = "Discover our craft",
  title = "Bring New Life to Your Home",
  subtitle = "Interior & exterior painting done right across Minnesota.",
  ctaLabel = "See our work",
  ctaHref = "/gallery",
} = Astro.props;
---

<section
  aria-label="PaintCraft showcase"
  class="relative isolate overflow-hidden"
>
  <img
    src={image}
    alt={alt}
    class="absolute inset-0 h-full w-full object-cover"
    loading="lazy"
    decoding="async"
  />
  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/35 to-black/20"></div>

  <div class="relative mx-auto max-w-7xl px-4 md:px-6 py-20 md:py-28">
    <div class="max-w-3xl">
      {eyebrow && (
        <p class="mb-2 inline-flex items-center rounded-full bg-white/15 px-3 py-1 text-xs font-medium tracking-wide text-white/90 ring-1 ring-white/20 backdrop-blur">
          {eyebrow}
        </p>
      )}
      <h2 class="text-3xl md:text-5xl font-semibold leading-tight text-white">
        {title}
      </h2>
      <p class="mt-3 text-base md:text-lg text-white/85">{subtitle}</p>

      <div class="mt-6">
        <a
          href={ctaHref}
          class="inline-flex items-center rounded-full bg-white px-5 py-2.5 text-sm font-medium text-neutral-900 shadow-sm hover:bg-neutral-100 focus:outline-none focus-visible:ring-2 focus-visible:ring-white/70"
        >
          {ctaLabel}
          <svg
            class="ml-2 h-4 w-4"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l5 5a1 1 0 01.083 1.32l-.083.094-5 5a1 1 0 01-1.497-1.32l.083-.095L13.585 10H4a1 1 0 01-.117-1.993L4 8h9.585l-3.292-3.293a1 1 0 010-1.414z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      </div>
    </div>
  </div>

  <div class="pointer-events-none absolute inset-x-0 top-0 h-16 bg-gradient-to-b from-black/25 to-transparent"></div>
  <div class="pointer-events-none absolute inset-x-0 bottom-0 h-10 bg-gradient-to-t from-black/20 to-transparent"></div>

  <style is:inline>
    @media (prefers-reduced-motion: no-preference) {
      section[aria-label="PaintCraft showcase"] img {
        transform: scale(1.03);
        transition: transform 900ms ease;
      }
      section[aria-label="PaintCraft showcase"]:hover img {
        transform: scale(1.06);
      }
    }
  </style>
</section>
