---
export interface Props {
  title?: string;
  description?: string;
  backHref?: string;
  backLabel?: string;
  bbbLink?: string;
}

const {
  title = "Ready to get started?",
  description = "Schedule a quick walk-through and same-day estimate.",
  backHref = "/",
  backLabel = "Back to Services",
  bbbLink ="https://www.bbb.org/us/mn/hopkins/profile/painting-contractors/paintcraft-llc-0704-1000075280/#sealclick"
} = Astro.props as Props;
---

<section
  class="relative py-16 md:py-20 text-center"
  style="background: var(--surface);"
>
  <div class="mx-auto max-w-5xl px-6 md:px-10">

    <h2
      class="text-2xl md:text-3xl font-semibold"
      style="color: var(--on-surface);"
    >
      {title}
    </h2>

    <p
      class="mt-3 text-base md:text-lg"
      style="color: color-mix(in oklab, var(--on-surface) 85%, transparent);"
    >
      {description}
    </p>

    <!-- Universal Buttons -->
    <div class="mt-8 flex flex-wrap justify-center gap-4">

      <!-- Primary: Black Button -->
      <a
        href="/contact"
        class="inline-flex items-center rounded-full px-7 py-3 text-base font-semibold
               bg-neutral-900 text-white border border-neutral-900 shadow-sm
               hover:bg-neutral-800 hover:border-neutral-800 hover:shadow-md
               transition-all duration-200"
      >
        Get a Free Estimate
      </a>

      <!-- Secondary: White Button -->
      <a
        href={backHref}
        class="inline-flex items-center rounded-full px-7 py-3 text-base font-semibold
               bg-white text-neutral-900 border border-neutral-300 shadow-sm
               hover:bg-neutral-100 hover:shadow-md
               transition-all duration-200"
      >
        {backLabel}
      </a>

    </div>

    <!-- BBB Badge -->
    <div class="mt-10 flex justify-center">
      <a
        href={bbbLink}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 opacity-90 hover:opacity-100 transition"
      >
        <img
          src="https://seal-minnesota.bbb.org/seals/blue-seal-293-61-bbb-1000075280.png"
          alt="BBB Accredited Business"
          class="h-12 w-auto object-contain"
          loading="lazy"
        />
        <span
          class="text-sm font-medium"
          style="color: var(--on-surface);"
        >
          Rated & Accredited by the Better Business Bureau
        </span>
      </a>
    </div>

  </div>
</section>
