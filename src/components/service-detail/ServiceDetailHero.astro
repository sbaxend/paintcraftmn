---
const {
  title,
  subtitle = "",
  heroImage = "",
  backHref = "/",
  backLabel = "Back to Services",
  ctaLabel = "Get a Free Estimate",
} = Astro.props;
---

<section
  class="relative min-h-[56vh] flex items-center"
  style="background: var(--surface);"
>
  {heroImage && (
    <img
      src={heroImage}
      alt={title}
      class="absolute inset-0 w-full h-full object-cover opacity-20 mix-blend-multiply"
      loading="eager"
      decoding="async"
    />
  )}

  <div
    class="absolute inset-0 pointer-events-none"
    style="background: var(--surface-grad);"
  ></div>

  <div
    class="relative z-10 mx-auto max-w-6xl px-6 md:px-10
           py-14 md:py-16 grid md:grid-cols-2 gap-8"
  >
    <div class="md:pr-8">

      <h1
        class="text-[clamp(28px,4vw,50px)] leading-tight font-sans font-semibold"
        style="color: var(--on-surface);"
      >
        {title}
      </h1>

      {subtitle && (
  <p
    class="mt-3 text-base md:text-lg opacity-80"
    style="color: var(--on-surface);"
  >
    {subtitle}
  </p>
)}


      <!-- Buttons -->
      <div class="mt-6 flex flex-wrap gap-3">

        <a
          href="/contact"
          class="inline-flex items-center rounded-full px-6 py-3
                 text-sm md:text-base font-semibold
                 bg-neutral-900 text-white border border-neutral-900
                 shadow-sm hover:bg-neutral-800 hover:border-neutral-800
                 hover:shadow-md transition-all duration-200"
        >
          {ctaLabel}
        </a>

        <a
          href={backHref}
          class="inline-flex items-center rounded-full px-6 py-3
                 text-sm md:text-base font-semibold
                 bg-white text-neutral-900 border border-neutral-300
                 shadow-sm hover:bg-neutral-100 hover:shadow-md
                 transition-all duration-200"
        >
          {backLabel}
        </a>

      </div>
    </div>
  </div>
</section>
