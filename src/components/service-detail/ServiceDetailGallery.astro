---
export interface Props {
  title: string;       // Used for alt text context (e.g. "Walls & Ceilings")
  photos?: string[];   // Array of image paths
}

const { title, photos = [] } = Astro.props as Props;
---

{photos.length > 0 && (
  <section class="bg-white">
    <div class="mx-auto max-w-6xl px-6 md:px-10 py-16 md:py-20">
      <div class="mb-6 md:mb-8">
        <p class="text-xs font-semibold tracking-[0.18em] uppercase text-neutral-500">
          Project examples
        </p>
        <h2 class="mt-2 text-2xl md:text-3xl font-semibold text-neutral-900">
          Recent {title.toLowerCase()}
        </h2>
        <p class="mt-2 text-sm md:text-base text-neutral-600 max-w-2xl">
          A few examples of {title.toLowerCase()} weâ€™ve completed for Minnesota homeowners.
        </p>
      </div>

      <div class="grid md:grid-cols-12 gap-6 md:gap-8">
        {photos.map((src, i) => (
          <figure
            class={`overflow-hidden rounded-2xl shadow-sm border border-neutral-200
              ${
                i % 4 === 0
                  ? "md:col-span-7"
                  : i % 4 === 1
                  ? "md:col-start-8 md:col-span-5 md:mt-16"
                  : i % 4 === 2
                  ? "md:col-span-6"
                  : "md:col-start-7 md:col-span-6 md:-mt-10"
              }`}
          >
            <img
              src={src}
              alt={`${title} example ${i + 1}`}
              class="w-full h-full object-cover"
              loading={i === 0 ? "eager" : "lazy"}
              decoding="async"
            />
          </figure>
        ))}
      </div>
    </div>
  </section>
)}
