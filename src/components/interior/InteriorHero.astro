---
export interface Props {
  title: string;
  subtitle?: string;
  bg?: string; // /public path
}

const { title, subtitle = "", bg = "/hero.png" } = Astro.props as Props;
---

<section
  class="relative h-[78vh] min-h-[560px] bg-black"
  style={`background-image:url('${bg}'); background-size:cover; background-position:center;`}
>
  <div class="absolute inset-0 bg-black/45"></div>
  <div class="relative mx-auto max-w-7xl px-6 h-full flex items-center">
    <div class="max-w-2xl">
      <h1 class="text-white text-4xl md:text-6xl font-extrabold drop-shadow-xl">
        {title}
      </h1>
      {subtitle && (
        <p class="mt-4 text-white/90 text-lg md:text-xl">{subtitle}</p>
      )}
      <a
        href="/contact"
        class="mt-8 inline-flex items-center rounded-full bg-blue-600 px-6 py-3 font-medium text-white shadow hover:bg-blue-700 transition"
        >Get Free Estimate</a
      >
    </div>
  </div>
</section>
