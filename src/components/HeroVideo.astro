---
const {
  logoSrc = "/paintcraft_logo.webp",
  videoSrc = "/HomeHeroVideo.mp4",
  poster  = "/hero-poster.jpg",
  title   = "Fall in love with your home, again",
  subtitle = "Expert interior & exterior painting services across Minnesota. Quality craftsmanship. Lasting beauty.",
  cta = { label: "Get a Free Estimate", href: "/contact" }
} = Astro.props;
---

<section class="relative h-[70vh] min-h-[460px] overflow-hidden">
  <!-- Video -->
  <video
    class="absolute inset-0 h-full w-full object-cover"
    src={videoSrc}
    poster={poster}
    autoplay
    muted
    loop
    playsinline
  ></video>

  <!-- Dark overlay for readability -->
  <div class="absolute inset-0 bg-black/45"></div>

  <!-- Centered content -->
  <div class="relative z-10 mx-auto flex h-full max-w-7xl items-center justify-center px-4 text-center text-white">
    <div class="max-w-3xl">
      <!-- Logo with fade-in -->
      <img src={logoSrc} alt="PaintCraft" class="mx-auto mb-6 h-14 w-auto animate-fade-in" />

      <h1 class="animate-fade-in-up text-4xl font-bold tracking-tight md:text-5xl">
        {title}
      </h1>
      <p class="mt-4 animate-fade-in-up text-base md:text-lg text-white/90">
        <!-- {subtitle} -->
      </p>

      {cta?.href && (
        <a
          href={cta.href}
          class="mt-8 inline-flex rounded-full bg-blue-600 px-6 py-3 text-sm font-semibold text-white shadow-lg transition hover:bg-blue-700"
        >
          {cta.label}
        </a>
      )}
    </div>
  </div>
</section>
