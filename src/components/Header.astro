---
import { navLinks, ctaButton } from "../config/siteConfig.js";
const current = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-white/90 backdrop-blur-md border-b border-neutral-200 supports-[backdrop-filter]:bg-white/70">
  <div class="mx-auto max-w-7xl px-4 md:px-6">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2.5 group">
        <img
          src="/paintcraft_logo.webp"
          alt="PaintCraft logo"
          class="h-7 w-7 transition-transform group-hover:scale-105"
        />
        <span class="font-bold tracking-tight text-lg">PAINTCRAFT</span>
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center gap-1">
        {navLinks.map((link) => {
          const hasDropdown = link.dropdown && link.dropdown.length > 0;
          return (
            <div class="relative group" key={link.href}>
              <a
                href={link.href}
                class={`relative flex items-center gap-1.5 rounded-xl px-4 py-2 text-sm font-medium transition-all duration-200 ${
                  current.startsWith(link.href) && link.href !== "/"
                    ? "text-[#C48356] bg-[#C48356]/10"
                    : "text-neutral-700 hover:text-[#C48356] hover:bg-[#C48356]/5"
                }`}
                aria-haspopup={hasDropdown ? "true" : "false"}
                aria-expanded="false"
              >
                {link.label}
                {hasDropdown && (
                  <svg
                    class="h-3.5 w-3.5 transition-transform duration-200 group-hover:rotate-180"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                )}
              </a>

              {hasDropdown && (
                <div
                  class="absolute left-1/2 -translate-x-1/2 top-full mt-2 w-64 opacity-0 invisible pointer-events-none group-hover:opacity-100 group-hover:visible group-hover:pointer-events-auto focus-within:opacity-100 focus-within:visible focus-within:pointer-events-auto transition-all duration-200 ease-out origin-top"
                  role="menu"
                >
                  <div class="rounded-2xl bg-white p-2 shadow-xl ring-1 ring-[#C48356]/20 backdrop-blur-xl border border-[#C48356]/10">
                    {link.dropdown.map((item) => (
                      <a
                        href={item.href}
                        class={`block rounded-lg px-4 py-2.5 text-sm font-medium text-neutral-700 hover:bg-[#C48356]/10 hover:text-[#C48356] transition-colors ${
                          current === item.href ? "bg-[#C48356]/10 text-[#C48356]" : ""
                        }`}
                        role="menuitem"
                        key={item.href}
                      >
                        {item.label}
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </div>
          );
        })}

        <a
          href={ctaButton.href}
          class="ml-4 inline-flex items-center rounded-xl bg-[#C48356] px-5 py-2.5 text-sm font-semibold text-white hover:bg-[#B47347] hover:shadow-md transition-all"
        >
          {ctaButton.label}
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <button
        id="menuBtn"
        class="md:hidden p-2 rounded-lg text-neutral-700 hover:bg-[#C48356]/10 transition"
        aria-label="Open menu"
        aria-expanded="false"
      >
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Drawer -->
  <div id="mobileMenu" class="md:hidden hidden border-t border-neutral-200 bg-white">
    <div class="px-4 py-3 space-y-1.5">
      {navLinks.map((link) => {
        const hasDropdown = link.dropdown && link.dropdown.length > 0;
        return (
          <div key={`m-${link.href}`}>
            <a
              href={link.href}
              class={`flex items-center justify-between rounded-lg px-3 py-2.5 font-medium transition ${
                current.startsWith(link.href) && link.href !== "/"
                  ? "bg-[#C48356]/10 text-[#C48356]"
                  : "text-neutral-700 hover:bg-[#C48356]/5"
              }`}
            >
              {link.label}
              {hasDropdown && (
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              )}
            </a>

            {hasDropdown && (
              <div class="pl-6 space-y-1">
                {link.dropdown.map((item) => (
                  <a
                    href={item.href}
                    class={`block rounded-lg px-3 py-2 text-sm text-neutral-600 transition ${
                      current === item.href
                        ? "bg-[#C48356]/10 text-[#C48356] font-medium"
                        : "hover:bg-[#C48356]/5"
                    }`}
                    key={`m-${item.href}`}
                  >
                    {item.label}
                  </a>
                ))}
              </div>
            )}
          </div>
        );
      })}

      <a
        href={ctaButton.href}
        class="mt-3 block text-center rounded-xl bg-[#C48356] text-white px-4 py-2.5 font-semibold hover:bg-[#B47347]"
      >
        {ctaButton.label}
      </a>
    </div>
  </div>
</header>

<script is:inline>
  const btn = document.getElementById("menuBtn");
  const menu = document.getElementById("mobileMenu");
  btn?.addEventListener("click", () => {
    const expanded = btn.getAttribute("aria-expanded") === "true";
    btn.setAttribute("aria-expanded", String(!expanded));
    menu?.classList.toggle("hidden");
  });

  document.addEventListener("click", (e) => {
    if (!btn?.contains(e.target) && !menu?.contains(e.target)) {
      menu?.classList.add("hidden");
      btn?.setAttribute("aria-expanded", "false");
    }
  });
</script>
