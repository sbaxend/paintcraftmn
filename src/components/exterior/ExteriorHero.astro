---
export interface Props {
  title: string;
  subtitle?: string;
  bg?: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  title,
  subtitle,
  bg = "/hero.png",
  ctaText = "Schedule Now",
  ctaHref = "/contact",
} = Astro.props as Props;
---

<section
  class="relative h-[85vh] min-h-[700px] flex flex-col items-center justify-center text-center bg-black"
  style={`background-image:url('${bg}'); background-size:cover; background-position:center;`}
>
  <!-- Dark Overlay -->
  <div class="absolute inset-0 bg-black/50"></div>

  <!-- Main Content -->
  <div class="relative z-10 px-6 max-w-4xl">
    <h1
      class=" font-sans font-semibold text-white font-extrabold tracking-tight leading-[1.1]
             text-[clamp(2.5rem,6vw,4.5rem)]
             drop-shadow-[0_8px_20px_rgba(0,0,0,0.55)]"
    >
      {title}
    </h1>

    {subtitle && (
      <p
        class="mt-4 text-white/90 text-lg md:text-xl max-w-2xl mx-auto
               drop-shadow-[0_6px_15px_rgba(0,0,0,0.45)]"
      >
        {subtitle}
      </p>
    )}

    <!-- CLEAN BRAND-COLORED CTA -->
    <a
  href={ctaHref}
  class="mt-8 inline-flex rounded-full border-2 border-[#C48356]/80 
                bg-[#C48356]/10 px-6 py-3 text-sm font-semibold text-white 
                transition-all duration-300 hover:bg-[#C48356] shadow-lg"
>
  {ctaText}
</a>

  </div>
</section>
