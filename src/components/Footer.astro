---
import { company, navLinks, socials } from "../config/siteConfig.js";
const year = new Date().getFullYear();
---

<footer class="mt-16 border-t border-neutral-200 bg-neutral-50">
  <div class="mx-auto max-w-7xl px-4 md:px-6 py-12 grid gap-10 md:grid-cols-4">
    <!-- Brand -->
    <div>
      <div class="flex items-center gap-2">
        <img src="/favicon.svg" alt="PaintCraft logo" class="h-6 w-6" />
        <span class="font-semibold tracking-wide">PAINTCRAFT</span>
      </div>
      <p class="mt-3 text-sm text-neutral-600">
        Professional interior & exterior painting across Minnesota.
      </p>
    </div>

    <!-- Quick Links -->
    <div>
      <h3 class="text-sm font-semibold text-neutral-900">Quick Links</h3>
      <ul class="mt-3 space-y-2">
        {navLinks.map((l) => (
          <li><a class="text-sm text-neutral-600 hover:text-neutral-900" href={l.href}>{l.label}</a></li>
        ))}
      </ul>
    </div>

    <!-- Contact -->
    <div>
      <h3 class="text-sm font-semibold text-neutral-900">Contact</h3>
      <ul class="mt-3 space-y-2 text-sm text-neutral-600">
        <li>{company.phone}</li>
        <li><a class="hover:text-neutral-900" href={`mailto:${company.email}`}>{company.email}</a></li>
        <li>{company.address}</li>
      </ul>
    </div>

    <!-- Social -->
    <div>
      <h3 class="text-sm font-semibold text-neutral-900">Follow</h3>
      <ul class="mt-3 space-y-2">
        {socials.map((s) => (
          <li><a class="text-sm text-neutral-600 hover:text-neutral-900" href={s.href} target="_blank" rel="noopener noreferrer">{s.label}</a></li>
        ))}
      </ul>
    </div>
  </div>

  <div class="border-t border-neutral-200">
    <div class="mx-auto max-w-7xl px-4 md:px-6 py-4 text-center text-xs text-neutral-500">
      Â© {year} {company.name}. All rights reserved.
    </div>
  </div>
</footer>
