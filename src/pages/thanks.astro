---
export const prerender = false;
import Base from "../layouts/Base.astro";
---

<Base title="Thanks | PaintCraft MN">
  <section class="relative overflow-hidden min-h-[70vh] flex items-center">
    <!-- background -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-b from-neutral-950/70 via-neutral-950/55 to-neutral-950/70"></div>
      <img
        src="/interior-home-tile.png"
        alt=""
        class="h-full w-full object-cover"
        loading="eager"
      />
    </div>

    <div class="relative mx-auto w-full max-w-4xl px-4 sm:px-6 py-14 sm:py-16 md:py-24">
      <div class="rounded-3xl bg-white/90 backdrop-blur p-5 sm:p-6 md:p-10 ring-1 ring-black/10 shadow-[0_24px_80px_rgba(0,0,0,.18)]">
        <div class="flex flex-col sm:flex-row sm:items-start gap-4 sm:gap-5">
          <!-- icon -->
          <div class="inline-flex h-11 w-11 shrink-0 items-center justify-center rounded-full bg-[#C48356]/15 ring-1 ring-[#C48356]/25">
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5 text-[#C48356]"
            >
              <path d="M20 6L9 17l-5-5" />
            </svg>
          </div>

          <!-- content -->
          <div class="min-w-0 flex-1">
            <h1 class="text-[clamp(26px,5vw,40px)] leading-tight font-semibold tracking-tight text-neutral-900">
              Thanks — we got your request.
            </h1>

            <p class="mt-3 text-neutral-700 text-base sm:text-lg">
              We’ll review your details and get back to you within{" "}
              <span class="font-semibold">1 business day</span>.
            </p>

            <div class="mt-6 grid gap-3 sm:gap-4 md:grid-cols-3">
              <div class="rounded-2xl border border-neutral-200 bg-white px-4 py-3">
                <div class="text-xs font-semibold text-neutral-600">Next step</div>
                <div class="mt-1 text-sm text-neutral-900">We’ll confirm details + timeline</div>
              </div>
              <div class="rounded-2xl border border-neutral-200 bg-white px-4 py-3">
                <div class="text-xs font-semibold text-neutral-600">Walkthrough</div>
                <div class="mt-1 text-sm text-neutral-900">On-site walkthrough</div>
              </div>
              <div class="rounded-2xl border border-neutral-200 bg-white px-4 py-3">
                <div class="text-xs font-semibold text-neutral-600">Estimate</div>
                <div class="mt-1 text-sm text-neutral-900">Clear written quote + options</div>
              </div>
            </div>

            <div class="mt-8 grid gap-3 sm:flex sm:flex-row sm:flex-wrap">
              <a
                href="/"
                class="w-full sm:w-auto inline-flex items-center justify-center rounded-full bg-[#C48356] px-6 py-3 font-semibold text-white shadow-lg
                       hover:bg-[#B47347] hover:shadow-xl hover:scale-[1.03] transition-all"
              >
                Back to home
              </a>

              <a
                href="/our-work"
                class="w-full sm:w-auto inline-flex items-center justify-center rounded-full border border-neutral-300 bg-white px-6 py-3 font-semibold text-neutral-900
                       hover:border-[#C48356] hover:text-[#C48356] hover:bg-neutral-50 transition-colors"
              >
                View transformations
              </a>

              <a
                href="tel:+19526979987"
                class="w-full sm:w-auto inline-flex items-center justify-center rounded-full border border-neutral-300 bg-white px-6 py-3 font-semibold text-neutral-900
                       hover:border-[#C48356] hover:text-[#C48356] hover:bg-neutral-50 transition-colors"
              >
                Call / text (952) 697-9987
              </a>
            </div>

            <div class="mt-6 text-xs text-neutral-500">
              If you need to add photos or details, reply to your confirmation email and we’ll attach it to your request.
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
