---
import ExteriorHero from "../components/exterior/ExteriorHero.astro";
import ExteriorProcess from "../components/exterior/ExteriorProcess.astro";
import Base from "../layouts/Base.astro";
import CoveredBand from "../components/CoveredBand.astro";
import ExteriorServices from "../components/exterior/ExteriorServices.astro"


// Re-use the same nice services slider used on Interior
import InteriorServices from "../components/interior/InteriorServices.astro";

// New (or soon) process slider for exterior – structure mirrors interior
// import ExteriorProcessBubbleSlide from "../components/exterior/ExteriorProcessBubbleSlide.astro";


// (Optional) When you create it:
import FAQExterior from "../components/exterior/FAQExterior.astro";
import ExteriorBlurb from "../components/exterior/ExteriorBlurb.astro";
import InteriorServicesBubbleFlow from "../components/interior/InteriorServicesBubbleFlow.astro";

const exteriorServices = [
  // { id: "siding",  title: "Siding",             img: "/siding.png" },
  // { id: "trim",    title: "Trim",               img: "/exteriorTrim.png" },
  { id: "stucco",  title: "Siding",     img: "/exterior-siding-service.jpeg" },
  { id: "doors",   title: "Doors & Windows",    img: "/doorsAndWindows.png" },
  { id: "deck",    title: "Deck & Fence",       img: "/staining.png" },
  // { id: "garage",  title: "Garage Doors",       img: "/garage.png" },
];
---

<Base title="Exterior Painting | PaintCraft MN">
  <!-- Hero (matches Interior style) -->
  <ExteriorHero
    title="Exterior Painting"
    bg="/exterior-hero-minnesota.png"
  />

 <ExteriorBlurb />

  <!-- Services (reuse InteriorServices component for the same layout) -->
  <section class="-mt-10">
    <ExteriorServices
      heading="Exterior Services"
      services={exteriorServices}
      minHeight="min-h-[78vh]"
      basePath="/exterior"
    />
  </section>

  <!-- Exterior process – same bubble slide format as interior -->
  <ExteriorProcess
    heading="A Better Exterior, Step by Step"
    stages={[
      { id: "wash",  title: "Wash & Prep",  desc: "Thorough pressure washing and surface preparation to ensure optimal paint adhesion and longevity.", img: "/exterior-minnesota-wash.png" },
      { id: "coat",  title: "Paint & Perfect",     desc: "Professional application of weather-resistant paints and sealants designed for Minnesota's climate.", img: "/paint-perfect-exterior-minnesota.png" },
      { id: "detail",title: "Clean & Inspect",    desc: "Final touches and comprehensive quality inspection to ensure lasting beauty and protection.", img: "/clean and inspect exterior.jpg" },
    ]}
  />

  <CoveredBand />


  <FAQExterior />
 
</Base>
