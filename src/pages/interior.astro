---
// src/pages/interior.astro
import Base from "../layouts/Base.astro";
import InteriorHero from "../components/interior/InteriorHero.astro";
import InteriorProcess from "../components/interior/InteriorProcess.astro";
import InteriorServices from "../components/interior/InteriorServices.astro";
import CoveredBand from "../components/CoveredBand.astro";
import FAQinterior from "../components/interior/FAQinterior.astro";
import InteriorProcessBubble from "../components/interior/InteriorProcessBubble.astro"
import InteriorProcessBubbleSlide from "../components/interior/InteriorProcessBubbleSlide.astro"
import InteriorServicesBubbleFlow from "../components/interior/InteriorServicesBubbleFlow.astro";
import InteriorBlurb from "../components/interior/InteriorBlurb.astro";
import InteriorProcessBubbleClick from "../components/interior/InteriorProcessBubbleClick.astro";

const interiorService = [
  { id: "walls",    title: "Walls & Ceilings",        img: "/walls-and-ceiling-service.jpeg" },
  { id: "trim",     title: "Trim & Molding",          img: "/trim_serviceTile.png" },
  { id: "cabinets", title: "Cabinets",                img: "/cabinet_serviceTile.png" },
  { id: "staining", title: "Staining",                img: "/interior-stains-service.jpeg" },
  { id: "popcorn",  title: "Popcorn Texture Removal", img: "/popcorn-removal-minnesota.JPG" },
];
---

<Base title="Interior Painting | PaintCraft MN">
  <InteriorHero
    title="Interior Painting"
    bg="/interior-home-tile.png"
  />

      
  <InteriorBlurb />

  <!-- Services section -->
  <section class="-mt-10 md:-mt-16">
    <InteriorServicesBubbleFlow
      heading="Interior Services"
      services={interiorService}
      minHeight="min-h-[78vh]"
    />
  </section>
    
  <InteriorProcessBubbleClick
    heading="A Fresh Interior From Start To Finish"
    stages={[
      { id: "prep",  title: "Prep & Protect",  desc: "We carefully protect your furniture and floors, then prep all surfaces for perfect paint adhesion.", img: "/prep-and-protect-interior.png" },
      { id: "paint", title: "Paint & Perfect", desc: "Expert application with premium paints for smooth, even coverage and flawless results.", img: "/paint-and-perfect.png" },
      { id: "clean", title: "Clean & Inspect", desc: "Thorough clean-up and a detailed walkthrough to make sure you love every detail.", img: "/inspect-two.png" },
    ]}
  />

  <CoveredBand />

  <FAQinterior />
</Base>