---
// src/pages/interior.astro
import Base from "../layouts/Base.astro";
import InteriorHero from "../components/interior/InteriorHero.astro";
import InteriorProcess from "../components/interior/InteriorProcess.astro";
import InteriorServices from "../components/interior/InteriorServices.astro";
import CoveredBand from "../components/CoveredBand.astro";
---

<Base title="Interior Painting | PaintCraft MN">
  <InteriorHero
    title="Interior Painting"
    subtitle="Transform your indoor spaces with premium quality paint and expert application"
    bg="/hero.png"
  />

  <!-- bring the process a bit closer to the hero -->
  <section class="pt-6 -mt-3">
    <InteriorProcess
      heading="We handle everything"
      stages={[
        { id: "prep",  title: "Prep & Protect",  desc: "We carefully protect your furniture and floors, then prep all surfaces for perfect paint adhesion.", img: "/prep.png" },
        { id: "paint", title: "Paint & Perfect", desc: "Expert application with premium paints for smooth, even coverage and flawless results.", img: "/perfect.png" },
        { id: "clean", title: "Clean & Inspect", desc: "Thorough clean-up and a detailed walkthrough to make sure you love every detail.", img: "/inspect.png" },
      ]}
    />
  </section>

  <InteriorServices />
  <CoveredBand />

  <section class="mx-auto max-w-7xl px-6 py-20">
    <h2 class="text-3xl md:text-4xl font-semibold">Ready to start?</h2>
    <p class="mt-4 text-neutral-700 max-w-2xl">
      Tell us about your project and weâ€™ll provide a fast, accurate estimate.
    </p>
    <a href="/contact" class="mt-8 inline-flex items-center rounded-full bg-blue-600 px-6 py-3 font-medium text-white shadow hover:bg-blue-700 transition">
      Get Free Estimate
    </a>
  </section>
</Base>
